# ===========================================
# ALLAY PROPERTY MANAGEMENT - ENVIRONMENT VARIABLES
# ===========================================

# -----------------
# Database
# -----------------
DATABASE_URI=postgresql://user:password@localhost:5432/allay_pm

# -----------------
# Payload CMS
# -----------------
# Used to encrypt JWT tokens (minimum 32 characters)
PAYLOAD_SECRET=your-secret-key-minimum-32-characters-long-here

# Base URL for links and CORS (no trailing slash)
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# -----------------
# Email Configuration (SendGrid or SMTP)
# -----------------
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@allaypm.com

# Email address to receive form submissions
NOTIFICATION_EMAIL=info@allaypm.com

# -----------------
# External Services (Optional)
# -----------------
# Google Analytics
GOOGLE_ANALYTICS_ID=

# Facebook Pixel
FACEBOOK_PIXEL_ID=

# Google Tag Manager
GTM_ID=

# AI Content Generation
ANTHROPIC_API_KEY=

# -----------------
# Security (Cloudflare Turnstile for CAPTCHA)
# -----------------
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# -----------------
# Development/Production
# -----------------
NODE_ENV=development
